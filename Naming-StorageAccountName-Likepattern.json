{
"policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "not": {
              "field": "name",
              "like": "*sa" 
            }
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }

